<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="post" class="add-product-form" enctype="multiparty/form-data">
    {{#if msg}}
    <p class="msg {{msg.status}}">{{msg.txt}}</p>
    {{/if}}
    <h3 class="form-title">Add sneakers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="name" class="label-name label">Model name</label>
      <input id="name" type="text" class="input-text input" placeholder="Nike Air Max 90" name="name" value="air max 1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="ref" class="label-ref label">RÃ©f.</label>
      <input id="ref" type="text" class="input-text input" name="ref" placeholder="ex: NV23498" value="NV23498">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="size" class="label-ref label">Size</label>
      <input id="size" type="number" class="input-text input" name="size" placeholder="ex: 37" value="42">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="description" class="label-descr label">Description</label>
      <input id="description" type="text" class="input-text input" name="description"
        placeholder="The better sneakers to run" value="foo bar baz">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="price" class="label-price label">Price</label>
      <input id="price" type="number" class="price input" name="price" min="1" value="123">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="category" class="label-main-cat label">Main category</label>
      <select id="category" name="category" class="select" required>
        <option value="-1" disabled selected>Choose a category</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="tags" class="label">Tags</label>
      <select name="tag" id="tag">
        {{#each tag}}
        <option value="{{this._id}}">{{this.label}}</option>
        {{/each}}
      </select>
    </div>
    <button class="button-primary add-sneaker-btn">Add to collection</button>
  </form>


  <div>
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="label" class="label">Sneaker tag</label>
      <input id="label" type="text" class="input" name="label" placeholder="ex: Gangsta">
    </div>
    <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
  </div>
</div>